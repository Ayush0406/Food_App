<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="16dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_food_image_delivery"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:orientation="vertical"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_order_number"
                android:text="26/11/2019 13:05:06"
                android:textColor="@android:color/holo_blue_light"
                android:fontFamily="@font/brandon_medium"
                android:textStyle="italic"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_time"
                android:text="Order Date: avbfbiuebifbwe"
                android:fontFamily="@font/brandon_medium"
                android:textStyle="italic"
                android:textSize="16sp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_name"
                android:text="Name: David"
                android:fontFamily="@font/brandon_medium"
                android:textStyle="italic"
                android:textSize="16sp"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_order_status"
                android:text="Order Staus: Place"
                android:fontFamily="@font/brandon_medium"
                android:textStyle="italic"
                android:textSize="16sp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt_num_item"
                android:text="Num of Items: 10"
                android:fontFamily="@font/brandon_medium"
                android:textStyle="italic"
                android:textSize="16sp"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>