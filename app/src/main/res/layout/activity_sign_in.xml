<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SignIn">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtPhone"
            android:hint="Phone Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColorHint="#fccbbf"
            android:textColor="#fccbbf"
            android:textSize="34sp"
            android:inputType="text"
            app:met_baseColor="#fccbbf"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#fccbbf"
            app:met_singleLineEllipsis="true"
            />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtPassword"
            android:hint="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColorHint="#fccbbf"
            android:textColor="#fccbbf"
            android:textSize="34sp"
            android:inputType="textPassword"
            app:met_baseColor="#fccbbf"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#fccbbf"
            app:met_singleLineEllipsis="true"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >



        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_margin="8dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical|center_horizontal"
            />

            <android.widget.Button
                android:id="@+id/btnSignIn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_margin="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="#5588cd"
                android:text="@string/sign_in"
                android:textColor="@android:color/white">
                <!--            app:buttonColor="@color/btnSignActive"-->
                <!--            app:shadowColor="@android:color/black"-->
                <!--            app:shadowEnabled="true"-->
                <!--            app:shadowHeight="5dp"-->
                <!--            app:cornerRadius="4dp"-->

            </android.widget.Button>
        </LinearLayout>

        <android.widget.Button
            android:id="@+id/btn_delivery_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#c75c41"
            android:text="Not a Customer?"
            android:textColor="@android:color/white" />

    </LinearLayout>

</RelativeLayout>